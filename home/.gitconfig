	email = michaelmdeng@gmail.com
	name = Michael Deng
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	attributesfile = ~/.gitattributes
	fsmonitor = false
	untrackedcache = true
	precomposeunicode = true
[rerere]
	enabled = true
[alias]
	co = checkout
	cob = checkout -b
	cof = !git for-each-ref --format=\"%(refname:short)\" refs/heads | fzf | xargs git checkout

	st = status
	stage = diff --staged
	staged = diff --staged

	ci = commit
	cia = commit -a
	cie = commit -e
	ciae = commit -ae
	ciea = commit -ae

	br = branch
	rb = rebase

	lo = log
	ls = log --oneline --decorate
	graph = log --oneline --decorate --graph --all

	bi = bisect
	bl = blame

	a = add
	aa = add -A

	f = fetch
	fo = fetch origin
	pl = pull
	plo = pull origin
	ph = push
	pho = push origin

	fix2 = rebase -i HEAD~2
	fix3 = rebase -i HEAD~3
	fix4 = rebase -i HEAD~4
	fix5 = rebase -i HEAD~5
	fix6 = rebase -i HEAD~6
	fix7 = rebase -i HEAD~7

	upstream = !git branch -u origin/$(git rev-parse --abbrev-ref HEAD) $(git rev-parse --abbrev-ref HEAD)

	continue = "!f() { \
		if git rev-parse --verify CHERRY_PICK_HEAD >/dev/null 2>&1; then \
		    git cherry-pick --continue; \
		elif git rev-parse --verify REBASE_HEAD >/dev/null 2>&1; then \
		    git rebase --continue; \
		elif git rev-parse --verify MERGE_HEAD >/dev/null 2>&1; then \
		    git commit; \
		else \
		    echo 'No operation in-progress to continue'; \
		fi; \
	}; f"
	abort = "!f() { \
		if git rev-parse --verify CHERRY_PICK_HEAD >/dev/null 2>&1; then \
		    git cherry-pick --abort; \
		elif git rev-parse --verify REBASE_HEAD >/dev/null 2>&1; then \
		    git rebase --abort; \
		elif git rev-parse --verify MERGE_HEAD >/dev/null 2>&1; then \
		    git merge --abort; \
		else \
		    echo 'No operation in-progress to abort'; \
		fi; \
	}; f"

[push]
	default = simple
[merge]
	tool = nvim
	conflictstyle = diff3
[mergetool "vimdiff"]
	tool = vimdiff
	prompt = false
[mergetool "nvim"]
	cmd = nvim -f -c \"Gdiff\" \"$MERGED\"
	tool = vimdiff
	prompt = false
[credential]
	helper = store
[checkout]
	defaultRemote = origin
	workers = 4
[pull]
	rebase = false
[feature]
	manyFiles = true
