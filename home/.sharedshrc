alias rm='rm -i'

# use better cmd-line tools if they are installed
if type "bat" > /dev/null; then
	alias cat='bat'
fi

if type "bat" > /dev/null; then
	alias batcat='bat'
fi

if type "rg" > /dev/null; then
	alias grep='rg'
fi

