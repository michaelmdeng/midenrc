{
  "coc.preferences.jumpCommand": "drop",
  "coc.preferences.hoverTarget": "float",
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.extensionUpdateCheck": "weekly",
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
  },
  "list.insertMappings": {
    "<C-j>": "do:previous",
    "<C-k>": "do:next",
    "<C-n>": "do:next",
    "<C-p>": "do:previous",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },
  "highlight.document.enable": true,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "suggest.detailField": "preview",
  "suggest.maxCompleteItemCount": 15,
  "suggest.minTriggerInputLength": 2,
  "signature.hideOnTextChange": true,
  "python.linting.enabled": false,
  "python.autoComplete.addBrackets": true,
  "python.workspaceSymbols.tagFilePath": "${workspaceFolder}/tags",
  "snippets.snipmate.enable": false,
  "snippets.loadFromExtensions": false,
  "snippets.userSnippetsDirectory": "~/.vim/ultisnips"
}
