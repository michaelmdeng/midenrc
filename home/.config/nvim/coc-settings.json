{
  "languageserver": {
    "metals": {
      "command": "metals-vim",
      "rootPatterns": ["build.sbt"],
      "filetypes": ["scala", "sbt"]
    }
  },
  "list.insertMappings": {
    "<C-j>": "do:previous",
    "<C-k>": "do:next",
    "<C-n>": "do:next",
    "<C-p>": "do:previous",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-v>": "action:vsplit"
  },
  "highlight.document.enable": true
}
